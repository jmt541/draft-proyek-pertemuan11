<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="300.0" prefWidth="400.0"
            fx:controller="com.example.bdsqltester.scenes.user.BuatPesananController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Form Buat Pesanan">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Nama Pemesan:" />
        <TextField fx:id="namaField" layoutX="150.0" layoutY="65.0" prefWidth="200.0"/>

        <Label layoutX="30.0" layoutY="110.0" text="Menu:" />
        <ComboBox fx:id="menuComboBox" layoutX="150.0" layoutY="105.0" prefWidth="200.0"/>

        <Label layoutX="30.0" layoutY="150.0" text="Jumlah:" />
        <TextField fx:id="jumlahField" layoutX="150.0" layoutY="145.0" prefWidth="200.0"/>

        <Button fx:id="submitButton" text="Submit Pesanan" layoutX="150.0" layoutY="200.0" onAction="#handleSubmit"/>
    </children>
</AnchorPane>
